{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@schema": ["db/schema"],
        "@middleware/*": ["middleware/*"],
        "@utils/*" : ["utils/*"],
        "@cron/*" : ["cron/*"],
        "@dto/*": ["dto/*"],
        "@worker/*" : ["worker/*"],
        "@variables/*": ["variables/*"]
    }
  }
}